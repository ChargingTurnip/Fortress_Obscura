"UnlitGeneric"
{
	"$translucent" 1
	"$baseTexture" "hud\color_dark"
	"$detail" "hud\eng_build_bg_mask"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.5
    $edgesoftnessend 0.4
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinecolor "[0.78 0.73 0.63]"
	$outlinestart0 0.4
	$outlinestart1 0.5
	$outlineend0 0.5
	$outlineend1 0.6
	$scaleoutlinesoftnessbasedonscreenres 1

	// and a drop shadow
	$glow 0
	$glowcolor "[0 0 0]"
	$glowalpha 0.5
	$glowstart 0
	$glowend 0.5
	$glowx -0.005
	$glowy -0.005

	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"
}

